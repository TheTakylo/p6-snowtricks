{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="bg-light p-3 py-4 h-100">
                    <h1>Inscription</h1>
                    {{ form_start(form) }}
                    <div class="mt-4">
                        {{ form_row(form.username, {'label': 'Nom d\'utilisateur'}) }}
                    </div>
                    <div class="mt-3">
                        {{ form_row(form.email, {'label': 'Adresse email'}) }}
                    </div>
                    <div class="mt-3">
                        {{ form_row(form.password, {'label': 'Mot de passe'}) }}
                    </div>
                    <button class="btn btn-primary mt-3" type="submit">S'inscrire</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}