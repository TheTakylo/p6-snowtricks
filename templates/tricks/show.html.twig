{% extends 'base.html.twig' %}

{% block title %}{{ trick.name }}{% endblock %}

{% block body %}
    <div id="trick-show" class="bg-light">
        <div class="container">
            <div id="trickMediaCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    {% for k, image in trick.images %}
                        <button type="button" {% if k == 0 %}class="active" aria-current="true"{% endif %} data-bs-target="#trickMediaCarousel" data-bs-slide-to="{{ k }}"
                                aria-label="Slide 1"></button>
                    {% endfor %}
                </div>
                <div class="carousel-inner">
                    {% for k, image in trick.images %}
                        <div class="carousel-item {% if k == 0 %}active{% endif %}">
                            <img src="{{ asset('uploads/images/' ~ image.filename) }}" class="d-block w-100" alt="">
                        </div>
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#trickMediaCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Précédent</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#trickMediaCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Suivant</span>
                </button>
            </div>
        </div>
    </div>
    <div class="container">
        {% if app.user %}
            <div class="my-3">
                <form action="{{ path('trick_delete', {id: trick.id}) }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-trick-' ~ trick.id) }}">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i>
                        Supprimer
                    </button>
                </form>
            </div>
        {% endif %}
        <p class="mt-5">
            {{ trick.description|raw }}
        </p>
        <hr class="mt-5">
        <div class="d-flex justify-content-between">
            <div>
                <span>Catégorie: </span>
                <a href="{{ path('trick_list', {slug: trick.trickCategory.slug}) }}"><span class="badge bg-primary">{{ trick.trickCategory.name }}</span></a>
            </div>
            <div>
                    <span class="fst-italic fs-6 text-secondary">
                        <strong>Ajouté le:</strong> {{ trick.createdAt|date('d/m/Y à h:i') }}
                        {% if trick.updatedAt %}
                            <br>
                            <strong>Dernière modification le:</strong> {{ trick.updatedAt|date('d/m/Y à h:i') }}
                        {% endif %}
                    </span>
            </div>
        </div>
        <hr>
    </div>
    <div class="container" id="comments">
        <div class="card">
            <div class="card-header">Commentaires</div>
            <div class="card-body">
                {% for comment in comments %}
                    <div class="d-flex text-muted pt-3">
                        <img src="https://www.gravatar.com/avatar/d" alt="" class="bd-placeholder-img flex-shrink-0 me-2 rounded" style="max-height: 55px;">
                        <div class="pb-4 border-bottom w-100">
                            <div class="d-flex justify-content-between">
                                <strong class="text-gray-dark">{{ comment.user.firstname }} {{ comment.user.lastname }}</strong>
                                <span class="small">Le {{ comment.createdAt|date('d/m/y à h:i:s') }}</span>
                            </div>
                            <span class="d-block">{{ comment.message }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% if comments and paginateTotal > 1 %}
            <nav class="my-2">
                <ul class="pagination">
                    <li class="page-item {% if paginateCurrent == 1 %}disabled{% endif %}">
                        <a class="page-link" href="{% if paginateCurrent == 1 %}#{% else %}?page={{ paginateCurrent - 1 }}#comments{% endif %}">Précédent</a>
                    </li>
                    {% for i in 1..paginateTotal %}
                        <li class="page-item {% if paginateCurrent == i %}active{% endif %}"><a class="page-link" href="?page={{ i }}#comments">{{ i }}</a></li>
                    {% endfor %}
                    <li class="page-item {% if paginateCurrent == paginateTotal %}disabled{% endif %}">
                        <a class="page-link" href="{% if paginateCurrent == paginateTotal %}#{% else %}?page={{ paginateCurrent + 1 }}#comments{% endif %}">Suivant</a>
                    </li>
                </ul>
            </nav>
        {% endif %}
        {% if app.user %}
            {{ form_start(form) }}
            <div class="mt-4">
                {{ form_row(form.message) }}
                <button class="btn btn-primary mt-3" type="submit">Valider</button>
            </div>
            {{ form_end(form) }}
        {% else %}
            <div class="alert alert-secondary">Vous devez <a href="{{ path('security_login') }}">être connecté</a> afin de pouvoir écrire un message</div>
        {% endif %}
    </div>
{% endblock %}