{{ form_start(form) }}
<div class="row mt-3">
    <div class="col-md-6">
        {{ form_row(form.name, {'label': 'Nom'}) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.trickCategory, {'label': 'Catégorie'}) }}
    </div>
</div>
<div class="mt-3">
    {{ form_row(form.description, {'label': 'Description'}) }}
</div>
<div class="card mt-3">
    <div class="card-header">
        Vidéos
    </div>
    <div class="card-body">
        {{ form_row(form.videos, {'label': false, 'attr': { 'class': 'row'}}) }}
        <button type="button" class="btn btn-sm btn-primary mt-3" id="trick_videos_collection_add">Ajouter</button>
    </div>
</div>
<div class="card mt-3">
    <div class="card-header">
        Images
    </div>
    <div class="card-body collection-group">
        {{ form_row(form.images, {'label': false}) }}
        <div class="col-md-3 collection-add-container">
            <div class="card" style="margin-top: 52px;height: 200px;">
                <div class="card-body d-flex align-items-center justify-content-center">
                    <button type="button" class="btn collection-add">
                        <i style="font-size: 28px" class="bi bi-plus-circle"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="mt-5">
    <button type="submit" class="btn btn-primary">Sauvegarder</button>
</div>
{{ form_end(form) }}