<div class="px-2 trick-card col-md-3 my-2">
    <a href="{{ path('trick_show', {category_slug: trick.trickCategory.slug, trick_slug: trick.slug}) }}" class="text-decoration-none text-dark">
        <div class="card">
            <div class="card-head">
                <img src="{% if trick.images and trick.images[0] is defined %}{{ asset('uploads/images/' ~ trick.images[0].filename) }}{% else %}{{ asset('build/images/default.png') }}{% endif %}" class="img-fluid" alt="">
            </div>
            <div class="card-body d-flex justify-content-between align-items-center">
                <span>{{ trick.name }}</span>
                {% if app.user %}
                    <div>
                        <a href="{{ path('trick_edit', {id: trick.id}) }}" class="btn"><i class="bi bi-pencil"></i></a>
                        <form class="d-inline-block" action="{{ path('trick_delete', {id: trick.id}) }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('delete-trick-' ~ trick.id) }}">
                            <button class="btn p-0" type="submit"><i class="bi bi-trash"></i></button>
                        </form>
                    </div>
                {% endif %}
            </div>
        </div>
    </a>
</div>