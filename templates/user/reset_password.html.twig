{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="bg-light p-3 py-4 h-100">
                    <h1 class="h2">Mot de passe oublié</h1>
                    {{ form_start(formReset) }}
                    {{ form_row(formReset.email, {'label': 'Adresse email'}) }}

                    <button class="btn btn-primary mt-3" type="submit">
                        Envoyer le lien de réinitialisation
                    </button>
                    {{ form_end(formReset) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}