{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="bg-light p-3 py-4 h-100">
                    {% include 'partials/flash.html.twig' %}
                    <h1 class="h2 mb-5">Mot de passe oublié</h1>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.password.first, {'label': 'Mot de passe'}) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.password.second, {'label': 'Confirmer le mot de passe'}) }}
                        </div>
                    </div>

                    <button class="btn btn-primary mt-3" type="submit">
                        Modifier le mot de passe
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}